<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="BUS EXPLORER"
             
             x:Class="prj_prototipo.MainPage">

    <ScrollView>

        <StackLayout>
            <Label Text="BUS EXPLORER" TextColor="#0E165F" FontSize="30" HorizontalTextAlignment="Center"
               Margin="20"
               />

            <Image Source="busmontanas.jpg"
               HeightRequest="250"
               WidthRequest="400"
                   Margin="0, 0, 0 , 20"
               HorizontalOptions="CenterAndExpand"
               />
            <Button Text="Ingresar" TextColor="White" BackgroundColor="#0E165F" Clicked="toLogin" Margin="10" CornerRadius="10"/>

            <Button Text="Registrar" TextColor="White" BackgroundColor="#0E165F" Clicked="toRegister" Margin="10" CornerRadius="10"/>

            <Button x:Name="btnViajes" Clicked="btnViajes_Clicked"  Text="Viajes" Margin="10" TextColor="White" BackgroundColor="#0E165F" CornerRadius="10"/>

            <Button x:Name="btnNosotros" Clicked="btnNosotros_Clicked"  Text="Nosotros" Margin="10" TextColor="White" BackgroundColor="#0E165F" CornerRadius="10"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
