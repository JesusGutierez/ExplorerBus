<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Registro de Terminales"
             x:Class="prj_prototipo.Vista.Registrar_Terminal">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Barra" Text="Grabar" Clicked="Barra_Clicked"  />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Nombre de Terminal " FontSize="Medium"/>
            <Entry x:Name="txtNom" />
            <Label Text="Dirección " FontSize="Medium"/>
            <Entry x:Name="txtDir" />
            <Label Text="Celular" FontSize="Medium"/>
            <Entry x:Name="txtCel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>