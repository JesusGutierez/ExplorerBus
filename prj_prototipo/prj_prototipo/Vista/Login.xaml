<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Inicio de sesión"
             x:Class="prj_prototipo.Vista.Login">
    <ContentPage.Content>
        <StackLayout Margin="20, 10" BackgroundColor="#F3F3F3" Padding="10">
            <Label Text="!BIENVENIDO¡" FontSize="30" HorizontalTextAlignment="Center" Margin="0, 10, 0, 10" TextColor="#0E165F"/>

            <Label Text="Inicia sesión" FontSize="20" TextColor="#383838"/>
            <Label >
                <Label.FormattedText>
                    <FormattedString>

                        <Span Text="¿No tienes una cuenta todavía?"/>
                        <Span Text="Click Me!" TextColor="Blue" TextDecorations="Underline" />
                    </FormattedString>

                </Label.FormattedText>
            </Label>

            <Entry Placeholder="Correo electrónico" Grid.Column="1" Grid.Row="1" IsPassword="True" />
            <Entry Placeholder="Contraseña" Grid.Column="1" Grid.Row="1" IsPassword="True" />
            <CheckBox x:Name="checkBox" IsChecked="true" />
            <!-- Layout children in two columns -->
            <Grid ColumnDefinitions="*,*">
                <Button Text="Save"/>
                <Button Grid.Column="1"
                    Text="Delete"/>
            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>